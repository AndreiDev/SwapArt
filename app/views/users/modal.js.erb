$('#modal-injection').empty();
$('#my-area').empty();
<% @from = "מ" %>
<% @pictures_by = "התמונות של" %>
$('#UserModalLabel').text("<%= @pictures_by %> <%= @user.first_name %> <%= @from %><%= @user.region.description %>")
<% if @my_items_user_wants.present? %>
  $("<%= escape_javascript render(:file => 'items/_my_items', locals: {locals: {user: @user, my_items_user_wants: @my_items_user_wants}}) %>").appendTo('#my-area');
<% end %>
<% @items.each do |item| %>
  $("<%= escape_javascript render(:file => 'items/_item_block', locals: {locals: {item: item, state: @states[item.id]}}) %>").appendTo('#modal-injection');
<% end %>
adjustModalThumbnail();
$('#UserModal').modal();