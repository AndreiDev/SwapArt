<div id="add-phone" class="container">
  <h1>Add Phone</h1>
  <%= form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
      <% if @show_errors && current_user.errors.any? %>
          <div id="error_explanation">
            <% current_user.errors.full_messages.each do |msg| %>
                <%= msg %><br>
            <% end %>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :phone %>
        <div class="controls">
          <%= f.text_field :phone, :autofocus => true, :value => '', class: 'form-control input-lg', placeholder: 'phone number' %>
          <p class="help-block">Please enter your phone number. No spam.</p>
        </div>
      </div>
      <div class="actions">
        <%= f.submit 'Continue', :class => 'btn btn-primary' %>
      </div>
  <% end %>
</div>