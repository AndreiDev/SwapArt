$('#modal-injection').empty();
$('#my-area').empty();
<% @from = "מ" %>
<% @pictures_by = "התמונות של" %>
$('#UserModalLabel').text("<%= @pictures_by %> <%= @user_items.swappee.first_name %> <%= @from %><%= @user_items.swappee.region.description %>")
<% if @user_items.my_items_user_wants.present? %>
$("<%= escape_javascript render(:file => 'items/_my_items', locals: {locals: {user: @user_items.swappee, my_items_user_wants: @user_items.my_items_user_wants}}) %>").appendTo('#my-area');
<% end %>
<% @user_items.items.each do |item| %>
$("<%= escape_javascript render(:file => 'items/_item_block', locals: {locals: {item: item, state: @user_items.states[item.id]}}) %>").appendTo('#modal-injection');
<% end %>
adjustModalThumbnail();
$('#UserModal').modal();