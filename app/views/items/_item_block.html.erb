<li class="col-lg-3 col-md-4 col-sm-6 col-xs-12" data-item-id = "<%= locals[:item].id %>">
  <div class="thumbnail">
    <div class="thumbnail-image-div">
      <div style="direction: ltr"><p class="thumbnail_image_size"><%= locals[:item].width  %>X<%= locals[:item].height %></p></div>
      <% unless locals[:item].user == current_user %>
        <%= link_to 'X', apply_blocks_path(block: {item_id: locals[:item].id}), format: :json, remote: true, method: :post, :class => "btn btn-danger thumbnail_close" %>
      <% end %>
      <img src= <%= locals[:item].image.url(:thumb) %> alt="">
    </div>
    <div class="caption">
      <p><%= locals[:item].description %></p>
      <p><%= locals[:item].type.description %> במצב   <%= locals[:item].state.description %> נקנה לפני  <%= locals[:item].age.description %> ב<%= locals[:item].price.description %></p>
      <p>
      <% if locals[:item].user == current_user || locals[:item].user.items.length == 1 %>
        <%= locals[:item].user.first_name %> (<%= locals[:item].user.region.description %>)
      <% else %>
        <%= link_to "%s (%s)" % [locals[:item].user.first_name, locals[:item].user.region.description], modal_users_path(id: locals[:item].user_id), format: :json, remote: true, :class => "user_modal_link" %>
      <% end %>
      <% if locals[:state] == 3 %>
        <span>שרוצה תמונה שלי</span>
      <% elsif locals[:state] == 4 %>
        <span>שרוצה תמונה שלי</span>
        <span class="user_info"><%=	locals[:item].user.email %></span>
      <% end %>
      </p>
      <p>
      <% if locals[:item].user == current_user %>
        <%= link_to t('Edit'), edit_item_path(locals[:item]), :class => "btn btn-info" %>
        <%= link_to t('Destroy'), locals[:item], method: :delete, data: { confirm: t('areYouSure') }, :class => "btn btn-info" %>
      <% else %>
        <% if locals[:state] == 2 || locals[:state] == 4  %>
          <%= link_to t('want'), toggle_wants_path(want: {item_id: locals[:item].id}), format: :json, remote: true, method: :post, :class => "btn btn-success want-btn" %>
        <% else %>
          <%= link_to t('want'), toggle_wants_path(want: {item_id: locals[:item].id}), format: :json, remote: true, method: :post, :class => "btn btn-default want-btn" %>
        <% end %>
      <% end %>
      </p>
    </div>
  </div>
</li>
