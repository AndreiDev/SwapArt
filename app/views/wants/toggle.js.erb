<% if @want.persisted? %>
  $('li[data-item-id="<%= @want.item_id %>"] .want_btn').addClass('btn-success');
  $('li[data-item-id="<%= @want.item_id %>"] .want_btn').removeClass('btn-default');
<% else %>
  $('li[data-item-id="<%= @want.item_id %>"] .want_btn').removeClass('btn-success');
  $('li[data-item-id="<%= @want.item_id %>"] .want_btn').addClass('btn-default');
<% end %>
