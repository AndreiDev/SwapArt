<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), validate: true, html: {class: 'form-horizontal'} do |f| %>

    <%= f.error_notification %>
    <%= render 'users/form_shared_inputs', f: f, user: resource %>


    <% if current_user %>
        <!-- Editing user with local password -->
        <% if !current_user.has_no_password? %>
            <%= f.input :password, :autocomplete => "off", :hint => t('devise.registrations.password_hint'), :required => false %>
            <%= f.input :password_confirmation, :required => false %>
            <%= f.input :current_password, :hint => t('devise.registrations.current_password'), :required => true %>
        <% end %>

        <%= f.button :submit, t('helpers.submit.user.update'), :class => 'btn-primary' %>


    <% else %>
        <!-- Creating local user -->
        <% if session[:omniauth].nil? %>
            <%= f.input :password, required: true %>
            <%= f.input :password_confirmation, required: true %>
        <% end %>

        <%= f.button :submit, t('helpers.submit.user.create'), :class => 'btn-primary', id: "registerButtonId" %>

    <% end %>

<% end %>
