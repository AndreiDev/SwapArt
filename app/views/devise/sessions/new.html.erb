<% content_for :login do %>

  <%= render 'devise/shared/sign_in_providers_list' %>

  <h3><%= t('sign_in.signed_in_users') %></h3>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-inline' }) do |f| %>
    <div class="inputs">
    <%= render 'devise/shared/login_form_fields', f: f, identifier: :email %>
    <div class="clearfix"></div>
    <%= f.button :submit, :class => 'btn btn-success' %>
    </div>
  <% end %>
<%= render "devise/shared/links" %>
<% end %>