<% content_for :login do %>

  <h2> <%= t('devise.passwords.edit') %> </h2>
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put , :class => 'form-vertical' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, :required => true, :autofocus => true %>
  <%= f.input :password_confirmation, :required => true %>
  <%= f.button :submit, 'שנה את הסיסמא', :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>

<% end %>