<% content_for :login do %>

  <h2> <%= t('devise.passwords.forgot') %> </h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'form-vertical'}) do |f| %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.button :submit, t('devise.passwords.send_password_reset'), class: 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>

<% end %>