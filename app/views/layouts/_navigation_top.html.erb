<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to site_name, site_url, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse">
      <!--<ul class="nav navbar-nav pull-right">-->
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <% if current_user.has_role? :admin %>
                <%= render 'layouts/menu_option', option_path: users_path, option_name: t('navigation.admin'), fa_name: 'fa-key' %> %>
            <% end %>
            <%= render 'layouts/menu_option', option_path: new_item_path, option_name: t('navigation.new_item'), fa_name: 'fa-picture-o' %>
            <% if current_user.items.count > 0 %>
              <%= render 'layouts/menu_option', option_path: items_path, option_name: t('navigation.items'), fa_name: 'fa-list-ul' %>
            <% end %>
            <%= render 'layouts/menu_option', option_path: edit_user_registration_path, option_name: t('navigation.edit_account'), fa_name: 'fa-wrench' %>
            <%= render 'layouts/menu_option', option_path: destroy_user_session_path, option_name: t('logout'), option_method: 'delete', fa_name: 'fa-sign-out' %>

        <% else %>
            <%= render 'layouts/menu_option', option_path: new_user_registration_path, option_name: t('navigation.register'), fa_name: 'fa-pencil' %>
            <%= render 'layouts/menu_option', option_path: new_user_session_path, option_name: t('login'), fa_name: 'fa-sign-in' %>
        <% end %>
      </ul>
    </div>

  </div>
</div>
